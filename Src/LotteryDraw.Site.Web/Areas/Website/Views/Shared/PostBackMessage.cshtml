@if (ViewBag.IsPostBack != null && (bool)ViewBag.IsPostBack)
{
    <script type="text/javascript">
        $(function () {
            var errorMessage = '@ViewBag.Message';
            if (errorMessage != null && errorMessage != "") {
                layer.alert(errorMessage, 8);
            }

            var isok = '@ViewBag.PostBackIsOK';
            if (isok) {
                var successString = '@ViewBag.SuccessString';
                layer.alert(successString, 9, function (index) {
                    var returnUrl = '@ViewBag.ReturnUrl';
                    if (returnUrl != null && returnUrl != "") {
                        location.href = returnUrl;
                    }
                    layer.close(index);
                });
            }
        });
    </script>
}